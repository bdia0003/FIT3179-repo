{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1600,
    "height": 900,
    "title": "Tallest Skyscrappers in US Cities - 2016",
    "projection": {"type": "albersUsa"},
    "background":"#151a1e",
    "config": {
  "legend": {"labelColor": "white", "titleColor":"white"},
  "title": {"color": "#3bc5d0", "fontSize": 32}
},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/bdia0003/FIT3179-repo/main/js/ne_110m.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "#263137", "stroke": "lightblue"}
      },
      {
        "data": {
          "url": "data/tallest_in_cities.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}, "color": "#3bc5d0"},
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Height",
            "type": "quantitative",
            "title": "Height (meters)",
            "scale": {"domain": [0,550]}
          }
        }
      }
    ]
  }